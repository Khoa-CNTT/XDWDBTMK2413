@model IEnumerable<RestaurantTableSystem.Models.Restaurant>
@{ 
ViewBag.Title = "Index";
Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategory" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý nhà hàng </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Nhà hàng</h3>

            @*<div class="card-tools">
                <a href="/admin/ProductCategory/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>*@
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên nhà hàng</th>
                        <th>Địa chỉ</th>
                        <th>Max table</th>
                        <th>Thời gian mở </th>
                        <th>Ngày tạo</th>

                        @*<th>Hiển thị</th>*@

                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var restaurant in Model)
                    {
                        <tr>
                            <td>@restaurant.restaurant_id</td>
                            <td>@restaurant.name</td>
                            <td>@restaurant.address</td>
                            <td>@restaurant.max_tables</td>
                            <td>@restaurant.opening_hours</td>
                            <td>@restaurant.created_at</td>
                            <td>
                                <a href="@Url.Action("Detail", "RestaurantCategory", new { id = restaurant.restaurant_id })" class="btn btn-sm btn-primary">Chi Tiết</a>
                                <a href="@Url.Action("Delete", "RestaurantCategory", new { id = restaurant.restaurant_id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa nhà hàng này không?');">Xóa</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>



        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

