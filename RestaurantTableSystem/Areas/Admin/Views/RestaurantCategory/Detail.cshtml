@model IEnumerable<RestaurantTableSystem.Models.MenuItem>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategory" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý menu restaurant</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Món ăn</h3>

            @*<div class="card-tools">
                <a href="/admin/ProductCategory/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>*@
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Tên món</th>
                        <th>Hình ảnh</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menuItem in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="selectedItems" value="@menuItem.menu_item_id" /></td>
                            <td>@menuItem.menu_item_id</td>
                            <td>@menuItem.name</td>
                            <td>
                                <img src="@Url.Content(menuItem.Image)" alt="Hình ảnh món ăn" style="max-width: 100px; max-height: 80px;" />
                            </td>
                            <td>@menuItem.description</td>
                            <td>@menuItem.price.ToString("N0") ₫</td>
                            @*<td>
                                <a href="@Url.Action("Edit", "MenuItem", new { id = menuItem.menu_item_id })" class="btn btn-sm btn-warning">Sửa</a>
                                <a href="@Url.Action("Delete", "MenuItem", new { id = menuItem.menu_item_id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa món này không?');">Xóa</a>
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <!-- Có thể thêm phân trang hoặc thông tin khác ở đây -->
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
