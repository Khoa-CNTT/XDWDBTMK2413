@model IEnumerable<RestaurantTableSystem.Models.ViewModels.BookingViewModel>
@using System.Linq
@{
    ViewBag.Title = "DanhSachBanDaDatAdmin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách bàn đã đặt - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .heading {
            font-family: 'Playfair Display', serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        th {
            background-color: #f9fafb;
            font-weight: 600;
            color: #374151;
        }

        tr:hover {
            background-color: #f3f4f6;
        }

        /* Định dạng trạng thái thanh toán */
        .status-completed {
            color: #10B981; /* Màu xanh lá cây */
            font-weight: 500;
        }

        .status-pending {
            color: #F97316; /* Màu cam */
            font-weight: 500;
        }

        .status-none {
            color: #6B7280; /* Màu xám cho trạng thái "Chưa thanh toán" */
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-8">
                <h1 class="heading text-3xl font-bold mb-6">Danh sách toàn bộ bàn đã đặt</h1>
                @if (Model != null && Model.Any())
                {
                    <table>
                        <thead>
                            <tr>
                                <th>Mã đặt bàn</th>
                                <th>Nhà hàng</th>
                                <th>Tên khách</th>
                                <th>Số điện thoại</th>
                                <th>Thời gian</th>
                                <th>Số người</th>
                                <th>Số tiền Cọc</th>
                                <th>Trạng thái thanh toán</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BookingId</td>
                                    <td>@item.RestaurantName</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.BookingTime.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.NumberOfGuests</td>
                                    <td>@(item.AmountPaid.HasValue ? item.AmountPaid.Value.ToString("N0") + " đ" : "Chưa thanh toán")</td>
                                    <td>
                                        @if (item.PaymentStatus == "completed")
                                        {
                                            <span class="status-completed">Completed</span>
                                        }
                                        else if (item.PaymentStatus == "pending")
                                        {
                                            <span class="status-pending">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="status-none">Chưa thanh toán</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-gray-600 text-center">Chưa có bàn nào được đặt.</p>
                }
            </div>
        </div>
    </main>
</body>
</html>