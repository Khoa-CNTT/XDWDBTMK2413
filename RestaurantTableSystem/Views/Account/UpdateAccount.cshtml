@model RestaurantTableSystem.Models.User
@using System.Linq
@{
    ViewBag.Title = "Cập Nhật Thông Tin Tài Khoản";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập nhật thông tin tài khoản</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .heading {
            font-family: 'Playfair Display', serif;
        }

        .error-message {
            color: #dc2626;
            font-size: 0.875rem;
        }

        input, button {
            outline: none;
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-6 flex justify-between items-center">
            <a href="@Url.Action("Index", "Home")" class="heading text-3xl font-bold text-gray-800">Smart-Booking</a>
            <nav>
                <ul class="flex space-x-8">
                    <li><a href="@Url.Action("Index", "Home")" class="text-gray-700 hover:text-amber-600 transition">Trang chủ</a></li>
                    <li><a href="@Url.Action("DatBan", "DatBan")" class="text-gray-700 hover:text-amber-600 transition">Đặt bàn</a></li>
                    <li><a href="@Url.Action("DanhSachBanDaDat", "DatBan")" class="text-gray-700 hover:text-amber-600 transition">Danh sách bàn đã đặt</a></li>
                    <li><a href="@Url.Action("AccountInfo", "Account")" class="text-gray-700 hover:text-amber-600 transition">Tài khoản</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-8">
                <h1 class="heading text-3xl font-bold mb-6">Cập nhật thông tin tài khoản</h1>
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="bg-green-100 text-green-700 p-4 rounded mb-6">
                        @ViewBag.SuccessMessage
                    </div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <!-- Form cập nhật thông tin tài khoản -->
                @using (Html.BeginForm("UpdateAccount", "Account", FormMethod.Post, new { @class = "space-y-6" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.user_id)

                    <!-- Họ và tên -->
                    <div>
                        <label for="full_name" class="block text-sm font-medium text-gray-700">Họ và tên</label>
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.full_name, new { @class = "block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" })
                            @Html.ValidationMessageFor(m => m.full_name, "", new { @class = "error-message mt-1" })
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.email, new { @class = "block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", @type = "email" })
                            @Html.ValidationMessageFor(m => m.email, "", new { @class = "error-message mt-1" })
                        </div>
                    </div>

                    <!-- Số điện thoại -->
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                        <div class="mt-1">
                            @Html.TextBoxFor(m => m.phone, new { @class = "block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", @type = "tel" })
                            @Html.ValidationMessageFor(m => m.phone, "", new { @class = "error-message mt-1" })
                        </div>
                    </div>

                    <!-- Mật khẩu mới -->
                    <div>
                        <label for="newPassword" class="block text-sm font-medium text-gray-700">Mật khẩu mới (để trống nếu không đổi)</label>
                        <div class="mt-1">
                            <input type="password" name="newPassword" id="newPassword" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" />
                            @if (ViewBag.PasswordError != null)
                            {
                                <p class="error-message mt-1">@ViewBag.PasswordError</p>
                            }
                        </div>
                    </div>

                    <!-- Xác nhận mật khẩu -->
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Xác nhận mật khẩu mới</label>
                        <div class="mt-1">
                            <input type="password" name="confirmPassword" id="confirmPassword" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" />
                        </div>
                    </div>

                    <!-- Nút cập nhật -->
                    <div>
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                            Cập nhật thông tin
                        </button>
                    </div>
                }
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-3 gap-8">
                <div>
                    <h3 class="heading text-2xl font-bold mb-4">Smart Booking</h3>
                    <p class="mb-4">Đặt bàn nhà hàng dễ dàng và nhanh chóng</p>
                    <p>Email: booking@smartbooking.com</p>
                </div>
                <div>
                    <h4 class="text-xl font-medium mb-4">Hỗ trợ</h4>
                    <p class="mb-2">Hotline: 1900 1234</p>
                    <p>Giờ làm việc: 8:00 - 22:00</p>
                </div>
                <div>
                    <h4 class="text-xl font-medium mb-4">Theo dõi chúng tôi</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-2xl hover:text-amber-400 transition"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p>© 2025 Smart Booking. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>